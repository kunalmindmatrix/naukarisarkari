@model List<naukarisarkari.Web.Models.Job>
@{
    ViewData["Title"] = "Latest Sarkari Jobs";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Department</th>
            <th>Posted On</th>
            <th>Apply</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Title</td>
                <td>@job.Department</td>
                <td>@job.PostedOn.ToString("dd MMM yyyy")</td>
                <td><a href="@job.ApplyLink" target="_blank" class="btn btn-sm btn-primary">Apply</a></td>
            </tr>
        }
    </tbody>
</table>
